<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorites_list_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/favorites_list_cell_icon"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/baseline_person_black_18dp"
        android:scaleType="fitCenter" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintRight_toRightOf="parent"
        android:tint="@color/colorGrey"
        android:src="@drawable/baseline_chevron_right_white_18dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/favorites_list_cell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/favorites_list_cell_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="@color/colorGrey2"
        android:text="Favorites"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/favorites_list_cell_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/favorites_list_cell_icon"
        android:gravity="center"
        android:textColor="@color/colorGrey1"
        android:text="0 items"
        android:textSize="13sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorGrey"
        app:layout_constraintLeft_toLeftOf="@+id/favorites_list_cell_des"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
